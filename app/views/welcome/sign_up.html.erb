<section id="contact">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 text-center">
        <h2>Sign Up</h2>
        <hr class="star-primary">
      </div>
    </div>
    <div class="row">
      <div class="col-lg-8 col-lg-offset-2">
        <%= form_tag "/sign_up", method: :post do %>
          <div class="row control-group">
            <div class="form-group col-xs-12 floating-label-form-group controls">
              <%= label_tag :username %>
              <%= text_field_tag :username, nil, placeholder: "Username", class: "form-control" %>
              <p class="help-block text-danger"></p>
            </div>
          </div> 
          <div class="row control-group">
            <div class="form-group col-xs-12 floating-label-form-group controls">
              <%= label_tag :email %>
              <%= email_field_tag :email, nil, placeholder: "Email", class: "form-control" %>
              <p class="help-block text-danger"></p>
            </div>
          </div>
          <div class="row control-group">
            <div class="form-group col-xs-12 floating-label-form-group controls">
              <%= label_tag :password %>
              <%= password_field_tag :password, nil, placeholder: "Password", class: "form-control" %>
              <p class="help-block text-danger"></p>
            </div>
          </div>
          <br>
          <div class="row">
            <div class="form-group col-xs-12">
              <%= submit_tag "Send", class: "btn btn-success btn-lg" %>
            </div>
          </div>  
        <% end %>
      </div>
    </div>
  </div>
</section>
